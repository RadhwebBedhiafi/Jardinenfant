                        <li class="breadcrumb-item active" aria-current="page">Form elements</li>
                    </ol>
                </nav>
            </div>
            <div class="row">
                <div class="col-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Basic form elements</h4>
                            <p class="card-description"> Basic form elements </p>
                            <div class="form-group">
                                {{ form_start(form) }}
                                {{ form_widget(form.dureInsc) }}<br>
                                <span class="genric-btn danger circle small" id="misscin">Error</span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail3">Description</label>
                                {{ form_widget(form.modePayment) }}<br>
                                <span id="misspayment">Error hey</span>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword4">horraire</label>
