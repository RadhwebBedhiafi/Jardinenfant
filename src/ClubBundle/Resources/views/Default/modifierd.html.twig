        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script>


            $(document).ready(function () {
                $('#misscin').hide();
                $('#clubbundle_demandedad_dureInsc').keyup(function () {
                    var re = /^[0-9 \t]{1,}$/i;
                    var x = $('#clubbundle_demandedad_dureInsc').val();
                    if (re.test(x)) {

                        $('#btn').prop('disabled', false);
                        $('#misscin').hide();


                    } else {



                        $('#misscin').show();



                        $('#btn').prop('disabled', true);
                    }

                });
            })



            $(document).ready(function () {
                $('#misspayment').hide();
                $('#clubbundle_demandedad_modePayment').keyup(function () {



                    var re = /^[a-z \t]{1,}$/i;
                    var x = $('#clubbundle_demandedad_modePayment').val();
