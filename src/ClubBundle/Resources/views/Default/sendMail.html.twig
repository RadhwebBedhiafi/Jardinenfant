{% extends 'base.html.twig' %}
{% block body %}
    <!--================Home Banner Area =================-->
    <!--================End Home Banner Area =================-->

    <!--================Contact Area =================-->
    <section class="contact_area section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">

                    {{ form_start(form) }}
                    {{ form_widget(form.subject, {'attr': {'class': 'form-control','placeholder':'subject'} }) }}</br>
                    <span class="genric-btn danger circle small" id="misssubject">Error</span>
                    {{ form_widget(form.mail, {'attr': {'class': 'form-control','placeholder':'mail'} }) }}</br>
                    <span class="genric-btn danger circle small" id="missmail">Error syntaxe</span>
                    {{ form_widget(form.objet, {'attr': {'class': 'form-control','placeholder':'objet'} }) }}</br>
                    <span class="genric-btn danger circle small" id="missobjet">Error</span>
                    <button type="submit" id="btn" class="btn primary-btn" style="float: right">Envoyer</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>


        $(document).ready(function () {
            $('#misssubject').hide();
            $('#clubbundle_mail_subject').keyup(function () {
                var re = /^[a-z \t]{1,}$/i;
                var x = $('#clubbundle_mail_subject').val();
                if (re.test(x)) {

                    $('#btn').prop('disabled', false);
                    $('#misssubject').hide();


                } else {



                    $('#misssubject').show();



                    $('#btn').prop('disabled', true);
                }

            });
        })
        $(document).ready(function () {
            $('#missmail').hide();
            $('#clubbundle_mail_mail').keyup(function () {
                var re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
                var x = $('#clubbundle_mail_mail').val();
                if (re.test(x)) {

                    $('#btn').prop('disabled', false);
                    $('#missmail').hide();


                } else {



                    $('#missmail').show();



                    $('#btn').prop('disabled', true);
                }

            });
        })
        $(document).ready(function () {
            $('#missobjet').hide();
            $('#clubbundle_mail_objet').keyup(function () {
                var re = /^[a-z \t]{1,}$/i;
                var x = $('#clubbundle_mail_objet').val();
                if (re.test(x)) {

                    $('#btn').prop('disabled', false);
                    $('#missobjet').hide();


                } else {



                    $('#missobjet').show();



                    $('#btn').prop('disabled', true);
                }

            });
        })
    </script>
        <!--================Contact Area =================-->
{% endblock %}