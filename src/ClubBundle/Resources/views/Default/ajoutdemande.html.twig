            var re = /^[a-z \t]{1,}$/i;
            var x = $('#clubbundle_demandedad_ancienClub').val();
            if (re.test(x)) {
                $('#btn').prop('disabled', false);
                $('#missancien').hide();
            } else {
                $('#missancien').show();
                $('#btn').prop('disabled', true);
            }
        });
    })
    $(document).ready(function () {
        $('#missobj').hide();
        $('#clubbundle_demandedad_objectif').keyup(function () {



            var re = /^[a-z \t]{1,}$/i;
            var x = $('#clubbundle_demandedad_objectif').val();
            if (re.test(x)) {
                $('#btn').prop('disabled', false);
                $('#missobj').hide();
            } else {
