{% extends 'baseBack.html.twig' %}
{% block body %}

    <div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Liste des classes</h4>
            <form method="POST" >
                <label>Identifiant</label> <input type="integer" name="id" >
                <input type="submit" name="submit" value="recherche" class="btn-primary btn">

            </form>
            <table class="table">
                <thead>
                <tr>
                    <th>Identifiant</th>
                    <th>Bloc</th>
                    <th>Libelle</th>
                    <th>Taille Maximal</th>
                    <th>Supprimer </th>
                    <th>Modifier</th>
                </tr>
                </thead>
                <tbody>
                {% for classe in classes %}
                <tr>

                    <td>{{ classe.id }}</td>

                    <td>{{ classe.bloc }}</td>
                    <td>{{ classe.libelle }}</td>
                    <td>{{ classe.effectif }}</td>
                    <td>
                        <a href="{{ path("classe_delete",{'id':classe.id}) }}" class="mdi mdi-delete"> </a>
                    </td>
                    <td>
                        <a href="{{ path("classe_update",{'id':classe.id}) }}" class="mdi mdi-autorenew"></a>
                    </td>

                    {% endfor %}
                </tr>
                <tr>

                </tbody>
            </table>
        </div>
    </div>
{% endblock %}