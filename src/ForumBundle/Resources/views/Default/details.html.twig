    <script>
        $(document).ready(function () {
            $('#misscon').hide();
            $('#forumbundle_commentaire_contenu').keyup(function () {
                var re = /^^.{1,}$/i;
                var x = $('#forumbundle_commentaire_contenu').val();
                if (re.test(x)) {

                    $('#btn').prop('disabled', false);
                    $('#misscon').hide();


                } else {



                    $('#misscon').show();



                    $('#btn').prop('disabled', true);
                }

            });
        })
        $(document).ready(function () {
            $('#missuser').hide();
            $('#forumbundle_commentaire_user').keyup(function () {
                var re = /^^.{1,}$/i;
                var x = $('#forumbundle_commentaire_user').val();
