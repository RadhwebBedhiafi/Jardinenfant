{% extends 'baseBack.html.twig' %}

{% block body %}
    <h1>Chauffeurs list</h1>

    <table border="3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Numtel</th>
                <th>Email</th>
                <th>Salaire</th>
                <th>Hiredate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chauffeur in chauffeurs %}
            <tr>
                <td><a href="{{ path('chauffeur_show', { 'id': chauffeur.id }) }}">{{ chauffeur.id }}</a></td>
                <td>{{ chauffeur.nom }}</td>
                <td>{{ chauffeur.prenom }}</td>
                <td>{{ chauffeur.numTel }}</td>
                <td>{{ chauffeur.email }}</td>
                <td>{{ chauffeur.salaire }}</td>
                <td>{% if chauffeur.hireDate %}{{ chauffeur.hireDate|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('chauffeur_show', { 'id': chauffeur.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('chauffeur_edit', { 'id': chauffeur.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('chauffeur_new') }}">Create a new chauffeur</a>
        </li>
        <a href="{{ path("pdf") }}" class="btn-primary btn">Imprimer PDF</a>
    </ul>
{% endblock %}
